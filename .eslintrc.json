{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "plugin:react/recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"fetch": false
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"semi": [2, "always"],
		"quotes": [2, "single"],
		"no-console": 1,
		"eqeqeq": 2,
		"space-unary-ops": 0,
		"spaced-comment": 0,
		"strict": 2,
		"no-var": "error",
		"valid-typeof": "error",
		// "no-use-before-define": ["error", {"functions": true, "classes": true}],
		"camelcase": "error",
		"indent": ["error", "tab", {"SwitchCase": 1}],
		"react/prop-types": "off"
	},
	"parser": "babel-eslint",
	"settings": {
		"import/resolver": {
			"alias": [
				["src", "./src"],
				["contannts", "./src/contannts"],
				["features", "./src/features"],
				["components", "./src/components"],
				["networks", "./src/networks"],
				["configs", "./src/configs"],
				["routers", "./src/routers"],
				["actions", "./src/actions"],
				["utils", "./src/utils"],
				["selectors", "./src/selectors"]
			]
		}
	}
}
